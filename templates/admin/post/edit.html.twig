{% extends 'adminbase.html.twig' %}

{% block title %}Nieuwsbericht aanpassen{% endblock %}

{% block content %}
    <section class="nieuwsOverzicht">
        <div class="container text-center" >
            <div class="title">
                <div class="row justify-center-md-center">
                    <div class="col-md-12 col-lg-12 col-sm-6 ">

                    </div></div></div></div></section>
<div class="container " >
    {{ include('admin/post/_form.html.twig', {'button_label': 'Opslaan'}) }}

    <div class="nieuwsberichten">
        <a href="{{ path('beheerNieuws') }}">
            <button style="margin-left:0px">Naar Overzicht</button></a>
    </div>

</div>
{% endblock %}
{% block script %}
    {{ parent() }}
    {# Javascript Block for text editor#}

    <script src="{{ asset('javascript/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    <script src="{{ asset('javascript/ckeditor/adapters/jquery.js') }}" type="text/javascript"></script>
    
    <script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function() {
    var fileName = $(this).val().split("\\").pop();
    $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
    var fileName = '{{ post.image }}'.split("\\").pop();
    $(".custom-file-input").siblings(".custom-file-label").addClass("selected").html(fileName);
    </script>
{% endblock %}