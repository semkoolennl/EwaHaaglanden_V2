{% extends 'base.html.twig' %}

{% block title %}{{ nieuwsbericht.title }} - nieuwsbericht | EWA Haaglanden{% endblock %}

{% block description %}
Samenvatting over een gepubliceerd nieuwsbericht.
{% endblock %}

{% block content %}
<section class="nieuwsOverzicht">

</section>
<div class="container info" >
    <div class="row justify-center-md-center">

        <!--    start  nieuwsbericht -->
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
            <div class="container">
                <div class="card">
                    <div class="cardimg">
                        <img class="card-img-top" src="{{  asset(vich_uploader_asset(nieuwsbericht, 'imageFile')) }}" alt="{{ nieuwsbericht.title }}" />
                    </div>
                    <div class="card-body">
                        <h4>{{ nieuwsbericht.title }}</h4>
                        <p>{{ nieuwsbericht.created|date('d-m-Y') }}</p>
                        <p >{{nieuwsbericht.content|raw}}</p>
                    </div>
                </div>
            </div>
        </div>
        <!--    einde  nieuwsberichten -->

    </div>
</div>
{% endblock %}