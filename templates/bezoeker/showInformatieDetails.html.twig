{% extends 'base.html.twig' %}

{% block title %}{{ informatie.name }} - Informatie | EWA Haaglanden{% endblock %}

{% block description %}
Overzicht informatie artikel.
{% endblock %}

{% block content %}
<section class="nieuwsOverzicht">
    <div class="container text-center" >
        <div class="title">
            <div class="row justify-center-md-center">
                <div class="col-md-12 col-lg-12 col-sm-6 ">
                    <h1>{{ informatie.name }} - Informatie</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container info" >
    <div class="row justify-center-md-center">

        <!--    start  nieuwsbericht -->
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
            <div class="container">
                <div class="card">
                    <div class="card-body">
                        <h3>{{ informatie.name }}</h3></br>
                        <a href="{{ asset('images/doc/' ~ informatie.file ) }}" target="_blank"><button style="padding: 5px 10px; margin-right: 15px" ><i class="far fa-file-pdf">&nbsp; </i> Download</button>{{ informatie.file }}</a></br>
                        </br>
                        <p>{{ informatie.created|date('d-m-Y') }}</p>
                        <p >{{ informatie.description|raw}}</p>
                    </div>
                </div>
            </div>
        </div>
        <!--    einde  nieuwsberichten -->

    </div>
</div>
{% endblock %}